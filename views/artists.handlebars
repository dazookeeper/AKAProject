<!DOCTYPE html>
<html>
<head>
  <title>Music AKA | Life's an Entertainment</title>
  {{> scripts}}
</head>

<script type="text/javascript">
  
    function search() {

      var allArtists = ["Kanye West", "Porter Robinson", "Taylor Swift"];
      var v = $("#srch-term").val().toLowerCase();
      console.log("Search: " + v);
    
      allArtists.forEach(function(entry) {
        console.log(entry);   
        if (v == "") {
          document.getElementById("artist_name_kw").style.display="block";
          document.getElementById("artist_name_pr").style.display="block";
          document.getElementById("artist_name_ts").style.display="block";
        }
        else if (entry.toLowerCase() == v && v == "kanye west") {
          console.log("Match: Kanye West");
          document.getElementById("artist_name_pr").style.display="block";
          document.getElementById("artist_name_pr").style.display="none";
          document.getElementById("artist_name_ts").style.display="none";
        }
        else if (entry.toLowerCase() == v && v == "porter robinson") {
          console.log("Match: Porter Robinson");
          document.getElementById("artist_name_kw").style.display="none";
          document.getElementById("artist_name_pr").style.display="block";
          document.getElementById("artist_name_ts").style.display="none";
        }
        else if (entry.toLowerCase() == v && v == "taylor swift") {
          console.log("Match: Taylor Swift");
          document.getElementById("artist_name_kw").style.display="none";
          document.getElementById("artist_name_pr").style.display="none";
          document.getElementById("artist_name_ts").style.display="block";
        }
      });
      //return false;
    }        

</script>

<body>
  {{> nav}}
  <div id="me" class="panel">
  
  <center>
    <font id="biggreen">MUSIC</font> 
    <font id="biggray">ARTISTS</font>
  </center>
  <br>

    <form class="navbar-form" role="search" onsubmit="search(); return false">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Enter name to search" name="srch-term" id="srch-term">
        <div class="input-group-btn">
          <button class="btn btn-default" type="button" id="srch-btn" onclick="search()"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </form>
  
  <!-- SlidesJS Required: Start Slides -->
  <!-- The container is used to define the width of the slideshow -->
  <div class="container">
    <div id="artist_name_kw"><a href="/artist/kanye-west"><h3 id="tittle">Kanye West</h3></a>
    <div id="slides3">
      <img src="img/kw0.jpg">
      <img src="img/kw1.jpg">
      <img src="img/kw2.jpg">
      <img src="img/kw3.jpg">
      <a href="#" class="slidesjs-previous slidesjs-navigation"><i class="icon-chevron-left"></i></a>
      <a href="#" class="slidesjs-next slidesjs-navigation"><i class="icon-chevron-right"></i></a>
    </div>
    </div>

    <div id="artist_name_pr"><a href="/artist/porter-robinson"><h3 id="tittle">Porter Robinson</h3></a>
    <div id="slides2">
      <img src="img/pr1.jpg">
      <img src="img/pr2.jpg">
      <img src="img/pr3.jpg">
      <img src="img/pr4.jpg">
      <a href="#" class="slidesjs-previous slidesjs-navigation"><i class="icon-chevron-left"></i></a>
      <a href="#" class="slidesjs-next slidesjs-navigation"><i class="icon-chevron-right"></i></a>
    </div>
    </div>

    <div id="artist_name_ts"><a href="/artist/taylor-swift"><h3 id="tittle">Taylor Swift</h3></a>
    <div id="slides">
      <img src="img/tf1.jpg">
      <img src="img/tf3.jpg">
      <img src="img/tf4.jpg">
      <img src="img/tf5.jpg">
      <a href="#" class="slidesjs-previous slidesjs-navigation"><i class="icon-chevron-left"></i></a>
      <a href="#" class="slidesjs-next slidesjs-navigation"><i class="icon-chevron-right"></i></a>
    </div>
    </div>
    
  </div>
  <!-- End SlidesJS Required: Start Slides -->

  <!-- SlidesJS Required: Link to jQuery -->
  <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
  <!-- End SlidesJS Required -->

  <!-- SlidesJS Required: Link to jquery.slides.js -->
  <script src="js/jquery.slides.min.js"></script>
  <!-- End SlidesJS Required -->

  <!-- SlidesJS Required: Initialize SlidesJS with a jQuery doc ready -->
  <script>
    $(function() {
      $('#slides').slidesjs({
        width: 940,
        height: 528,
        navigation: false,
        start: 1,
        play: {
          auto: true
        }
      });

      /*
        To have multiple slideshows on the same page
        they just need to have separate IDs
      */
      $('#slides2').slidesjs({
        width: 940,
        height: 528,
        navigation: false,
        start: 2,
        play: {
          auto: true
        }
      });

      $('#slides3').slidesjs({
        width: 940,
        height: 528,
        navigation: false,
        start: 3,
        play: {
          auto: true
        }
      });
    });
  </script>
  <!-- End SlidesJS Required -->
	
  <a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
  </div>
  <div class="clearfix"></div>
  </div>
</body>
</html>